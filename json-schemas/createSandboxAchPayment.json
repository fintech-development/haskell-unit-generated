{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "createSandboxAchPayment.json",

  "definitions": {
    "relationships": {
      "type": "object",
      "properties": {
        "account": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["depositAccount", "account", "batchAccount", "creditAccount"] },
                "id": { "$ref": "types.json#/definitions/identifier" }
              },
              "required": [ "type", "id" ],
              "additionalProperties": false
            }
          },
          "required": [ "data" ],
          "additionalProperties": false
        }
      },
      "required": [ "account" ],
      "additionalProperties": false
    },
    "achPayment": {
      "title": "Create Simulated ACH Payment",
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "achPayment" },
        "attributes": {
          "type": "object",
          "properties": {
            "amount": { "type": "integer"},
            "direction": { "type": "string", "enum": ["Credit", "Debit"] },
            "description": { "type": "string", "maxLength": 50 },
            "counterparty": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "required": [ "amount", "direction", "description" ],
          "additionalProperties": false
        },
        "relationships": { "$ref": "#/definitions/relationships" }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "attributes",
        "relationships"
      ]
    },
    "additionalProperties": false
  },

  "title": "Create Simulated ACH Payment",
  "type": "object",
  "properties": {
    "data": { "$ref": "#/definitions/achPayment" }
  },
  "additionalProperties": false,
  "required": [ "data" ]
}