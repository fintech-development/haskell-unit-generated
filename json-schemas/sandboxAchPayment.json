{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sandboxAchPayment.json",

  "definitions": {
    "relationships": {
      "type": "object",
      "properties": {
        "account": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["depositAccount", "account", "batchAccount", "creditAccount"] },
                "id": { "$ref": "types.json#/definitions/identifier" }
              },
              "required": [ "type", "id" ],
              "additionalProperties": false
            }
          },
          "required": [ "data" ],
          "additionalProperties": false
        }
      }
    },
    "achPayment": {
      "title": "Sandbox ACH Payment",
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "achPayment" },
        "id": { "$ref": "types.json#/definitions/identifier" },
        "attributes": {
          "type": "object",
          "properties": {
            "createdAt": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["Sent", "Returned", "Clearing"] },
            "amount": { "type": "integer"},
            "direction": { "type": "string", "enum": ["Credit", "Debit"] },
            "counterpartyName": { "type": "string" },
            "description": { "type": "string", "maxLength": 50 },
            "reason": { "type": [ "string", "null" ] }
          },
          "required": [ "createdAt", "status", "amount", "direction", "description" ],
          "additionalProperties": false
        },
        "relationships": { "$ref": "#/definitions/relationships" }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "id",
        "attributes",
        "relationships"
      ]
    },
    "additionalProperties": false
  },

  "title": "Sandbox ACH Payment Resource",
  "type": "object",
  "properties": {
    "data": { "$ref": "#/definitions/achPayment" }
  },
  "additionalProperties": false,
  "required": [ "data" ]
}