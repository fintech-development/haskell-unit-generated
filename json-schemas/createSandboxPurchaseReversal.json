{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "createSandboxPurchaseReversal.json",

  "definitions": {
    "relationships": {
      "type": "object",
      "properties": {
        "account": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": [ "depositAccount", "creditAccount" ] },
                "id": { "$ref": "types.json#/definitions/identifier" }
              },
              "required": [ "type", "id" ],
              "additionalProperties": false
            }
          },
          "required": [ "data" ],
          "additionalProperties": false
        },
        "relatedTransaction": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "const": "transaction" },
                "id": { "$ref": "types.json#/definitions/identifier" }
              },
              "required": [ "type", "id" ],
              "additionalProperties": false
            }
          },
          "required": [ "data" ],
          "additionalProperties": false
        }
      },
      "required": [ "account" ],
      "additionalProperties": false
    },
    "reversal": {
      "title": "Create Simulated Purchase Reversal",
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "cardReversalTransaction" },
        "attributes": {
          "type": "object",
          "properties": {
            "amount": { "type": "integer" },
            "last4Digits": {"type": "string", "pattern": "^\\d{4}$" },
            "internationalServiceFee": { "type": "integer"}

          },
          "required": [ "amount" ],
          "additionalProperties": false
        },
        "relationships": { "$ref": "#/definitions/relationships" }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "attributes",
        "relationships"
      ]
    },
    "additionalProperties": false
  },

  "title": "Create Simulated Purchase Reversal",
  "type": "object",
  "properties": {
    "data": { "$ref": "#/definitions/reversal" }
  },
  "additionalProperties": false,
  "required": [ "data" ]
}